<Window x:Class="Rewarder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GoodGame Rewarder" Height="350" Width="525">
    <StackPanel>       
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Margin="2">Ник стримера:</TextBlock>
            <TextBox Grid.Column="1" Grid.Row="0" Name="StreamerNameInput"></TextBox>
            <Button Width="100" Grid.Column="2" Grid.Row="0" Click="Button_Connect">Подключиться</Button>
        </Grid>
    </StackPanel>
</Window>
